doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Noom
        link(rel="stylesheet", href="https://unpkg.com/mvp.css@1.12/mvp.css")
    body 
        header 
            h1 Noom
        main 
            div#welcome 
                form
                    input(placeholder="room name", required, type="text", id="roomName")
                    button#enter Enter Room
                h4 Open Rooms 
                ul
            div#room
                h3
                ul
                form 
                    input(placeholder="write nickname", type="text", id="nickname")
                    button#nicknameBtn change
                form
                    input(placeholder="write message", type="text", id="msg")
                    button#sendBtn Send  
                

        script(src="/socket.io/socket.io.js") 
        script(src="/public/js/app.js") 